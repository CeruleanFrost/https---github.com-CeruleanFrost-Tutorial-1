html
  head
    title="MyBank"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet") 
  body
    div(class="container") 
      h2(class="pb-2 border-bottom")="User Details" 
      table(class="table") 
        thead 
          tr
            th(scope="col")="Username"
            th(scope="col")="Password"
            th(scope="col")="Email"
        tbody 
          tr
            td=user.username
            td=user.password 
            td=user.email 
